{% extends 'base.html.twig' %}

{% block title %}Ajouter Patient {% endblock %}

{% block stylesheets %}

    <!-- Font-->
    <link rel="stylesheet" href="{{ asset('css/nunito-font.css') }}">

    <!-- Main Style Css -->
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">



{% endblock %}

{% block body %}



    <div class="page-content">
        <div class="form-v9-content" style="background-image: url({{ asset('images/form-v9.jpg') }})">
            <form class="form-detail" action="#" method="post">
                <h2>Registration Form</h2>
                <div class="form-row-last">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}

                </div>
                <div class="form-row-last">



                </div>
                </br>

                <div class="form-row-last">

                    <h3>  Drop files here to upload </h3>

                </div>

                </br>

                <div class="form-row-last">

                    {{ include("@App/Default/uploader.html.twig") }}

                </div>



                <div class="form-row-last">
                    <input type="submit" name="register" class="register" value="Register">
                </div>
            </form>
        </div>
    </div>

    {{ form_end(form) }}

{% endblock %}
